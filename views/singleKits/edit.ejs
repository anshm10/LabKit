<%- include('../partials/header') %>

<div class="container">
		<h1 style="text-align: center; padding-top: 2%;">Edit <%= singleKit.name %></h1>
		<div style="width: 40%; margin: 25px auto;">
			<form action="/kits/<%= kit_id %>/singleKits/<%= singleKit._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Name of the Kit</label>
					<input class="form-control" type="text" name="singleKit[name]" value="<%= singleKit.name %>">
				</div>
				<div class="form-group">
					<label>Availability</label>
					<input class="form-control" type="text" name="singleKit[availability]" value="<%= singleKit.availability%>">
				</div>
				<div class="form-group">
					<label>Picture of  the Kit</label>
					<input class="form-control" type="text" name="singleKit[picture]" value="<%= singleKit.picture%>">
				</div>
				<div class="form-group">
					<label>Components</label>
					<input class="form-control" type="text" name="singleKit[components]" value="<%= singleKit.components%>">
				</div>
				<button class="btn btn-lg btn-dark btn-block">Submit!</button>
			</form>	
		</div>
</div>


<%- include('../partials/footer') %>