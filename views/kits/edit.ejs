<%- include('../partials/header') %>

<div class="container">
		<h1 style="text-align: center; padding-top: 2%;">Edit <%= kit.type %></h1>
		<div style="width: 40%; margin: 25px auto;">
			<form action="/kits/<%= kit._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<label>Company Name</label>
					<input class="form-control" type="text" name="kit[company]" value="<%= kit.company %>">
				</div>
				<div class="form-group">
					<label>Type of Kit</label>
					<input class="form-control" type="text" name="kit[type]" value="<%= kit.type %>">
				</div>
				<div class="form-group">
					<label>Image URl of kit</label>
					<input class="form-control" type="text" name="kit[image]" value="<%= kit.image %>">
				</div>
				<div class="form-group">
					<label>Description</label>
					<input class="form-control" type="text" name="kit[description]" value="<%= kit.description %>">
				</div>
				<button class="btn btn-lg btn-dark btn-block">Submit!</button>
			</form>	
		</div>
</div>


<%- include('../partials/footer') %>