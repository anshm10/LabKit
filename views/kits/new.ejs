<%- include('../partials/header') %>

<div class="container">
		<h1 style="text-align: center; padding-top: 2%;">Add a new Kit</h1>
		<div style="width: 40%; margin: 25px auto;">
			<form action="/kits" method="POST">
				<div class="form-group">
					<label>Company Name</label>
					<input class="form-control" type="text" name="company" placeholder="company">
				</div>
				<div class="form-group">
					<label>Type of Kit</label>
					<input class="form-control" type="text" name="type" placeholder="type">
				</div>
				<div class="form-group">
					<label>Image URl of kit</label>
					<input class="form-control" type="text" name="image" placeholder="image url">
				</div>
				<div class="form-group">
					<label>Description</label>
					<input class="form-control" type="text" name="description" placeholder="description">
				</div>
				<button class="btn btn-lg btn-dark btn-block">Submit!</button>
			</form>
		</div>
</div>


<%- include('../partials/footer') %>